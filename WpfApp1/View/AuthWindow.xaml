<Window x:Class="WpfApp1.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.ViewModels" d:DataContext="{d:DesignInstance Type=local:AuthViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid Background="#C2CAD0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock
            x:Name="GreetLogintext"
            Grid.Column="1"
            Grid.Row="0"
            Text="Логин"
            VerticalAlignment="Bottom"
            Margin = "50 0 0 0"
            FontSize="18"
            FontFamily="Cousine"
            />
        <TextBox
            x:Name="LoginBox"
            Grid.Column="1"
            Grid.Row="1"
            VerticalContentAlignment="Center"
            BorderBrush="#EE4C7C"
            Margin="50 20 150 20"
            Background="#E3E2DF"
            FontSize="14"
            FontFamily="Cousine"
            FontWeight="Bold"
            Text="{Binding Login}"
            />
        <TextBlock
            x:Name="GreetPasswordtext"
            Grid.Column="1"
            Grid.Row="2"
            Text="Пароль"
            VerticalAlignment="Bottom"
            Margin = "50 0 0 0"
            FontSize="18"
            FontFamily="Cousine"
            />
        <TextBox
            x:Name="PasswordBox"
            Grid.Column="1"
            Grid.Row="3"
            VerticalContentAlignment="Center"
            BorderBrush="#EE4C7C"
            Margin="50 20 150 20"
            Background="#E3E2DF"
            FontSize="14"
            FontFamily="Cousine"
            FontWeight="Bold"
            Text="{Binding Password}"
            />
        <Button 
            x:Name="ApplyButton"
            Grid.Column="0"
            Grid.Row="4"
            Grid.ColumnSpan="2"
            Content ="{Binding AcceptButtonContent, UpdateSourceTrigger=PropertyChanged}"
            BorderBrush="#EE4C7C"
            Margin="300 10 200 10"
            Background="#C2B9B0"
            FontSize="24"
            FontFamily="Cousine"
            Command="{Binding GetLoginCommand}"
            />
        <Image
            x:Name="LogoImage"
            Grid.Column="0"
            Grid.Row="1"
            Grid.RowSpan="3"
            Margin="10 0 0 0"
            Source="Z:\Практика №2\CooksR\CooksR\res\LogoOfRes.png"
            />
    </Grid>
</Window>
